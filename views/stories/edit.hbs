<h3>Bewerk Verhaal </h3>
<div class="row">
    <form class="col s12" method="post" action="/stories/{{story._id}}">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
        <div class="input-field">
            <input type="text" id="title" name="title" value="{{story.title}}">
            <label for="title">Titel</label>

        </div>
    </div>

    <div class="row">
        <div class="input-field">
            <select id="status" name="status">
                {{#select story.status}}
                <option value="public" selected> Public </option>
                <option value="private" > Prive </option>
                {{/select}}
            </select>
            <label for="status">Status </label>
        </div>
    </div>

    <div class="row">
        <div class="input-field">
            <h5>Vertel je verhaal </h5>
            <textarea id="body" name="body">{{story.body}}</textarea>
        </div>
    </div>
    <div class="row">
        <input type="submit" value="Opslaan" class="btn">
        <a href="/dashboard" class="btn orange">Annuleer</a>
    </div>
    </form>
</div>